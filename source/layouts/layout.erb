    </div>
  </nav>
  <div class="content">
    <%= yield %>
  </div>
    <footer>
      <div>
        <div class="recent">
          <h2>Recent Articles</h2>
          <ol>
            <% blog.articles.sort { |a,b| (b.date <=> a.date) != 0 ?  b.date <=> a.date : a.title <=> b.title }[0...10].each do |article| %>
              <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
          <% end %>
          </ol>

        </div>
        <div class='by_year'>
          <h2>By Year</h2>
          <ol>
            <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
              <li><%= link_to year, blog_year_path(year) %> (<%= articles.size %>)</a></li>
        <% end %>
        </ol>
      </div>
    </div>
  </footer>
  </div>
